@model RegisterModel

    <h3>@TempData.Peek("result")</h3>
<div class="signup-form">
    <form asp-route="Register" method="post">
        <div asp-validation-summary="ModelOnly" class="alert"></div>

        <h2>Create an Account</h2>
        <p class="hint-text">Sign up with your social media account or email address</p>
        <div class="social-btn text-center">
            <a href="#" class="btn btn-primary btn-lg disabled"><span class="fab fa-facebook"></span> Facebook</a>
            <a href="#" class="btn btn-danger btn-lg disabled"><span class="fab fa-google"></span> Google</a>
        </div>
        <div class="or-seperator"><b>or</b></div>
        <div class="form-group">
            <input type="text" asp-for="UserName" class="form-control input-lg" name="@nameof(Model.UserName)" placeholder="Username" required="required">
        </div>
        <div class="form-group">
            <input type="text" asp-for="PhoneNumber" class="form-control input-lg" name="@nameof(Model.PhoneNumber)" placeholder="Phone Number" required="required">
        </div>
        <div class="form-group">
            <input type="email" asp-for="Email" class="form-control input-lg" name="@nameof(Model.Email)" placeholder="Email Address" required="required">
        </div>
        <div class="form-group">
            <input type="password" asp-for="Password" class="form-control input-lg" name="@nameof(Model.Password)" placeholder="Password" required="required">
        </div>
        <div class="form-group">
            <input type="password" asp-for="ConfirmPassword" class="form-control input-lg" name="@nameof(Model.ConfirmPassword)" placeholder="Confirm Password" required="required">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success btn-lg btn-block signup-btn">Sign Up</button>
        </div>
    </form>
    <div class="text-center">Already have an account? <a asp-action="SignIn" asp-controller="SignIn">Login here</a></div>
</div>